<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true"
			android:state_pressed="true">
        <shape android:padding="1dp" android:shape="rectangle">
            <gradient android:startColor="#568bef" android:endColor="#5a92fb" android:angle="90"/>
            <stroke android:width="1dp" android:color="#5e75a6" />
            <corners android:bottomLeftRadius="3dp" android:bottomRightRadius="3dp" android:topLeftRadius="3dp" android:topRightRadius="3dp" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_focused="true">
        <shape android:padding="1dp" android:shape="rectangle">
            <gradient android:startColor="#568bef" android:endColor="#5a92fb" android:angle="90"/>
            <stroke android:width="1dp" android:color="#5e75a6" />
            <corners android:bottomLeftRadius="3dp" android:bottomRightRadius="3dp" android:topLeftRadius="3dp" android:topRightRadius="3dp" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:padding="1dp"
            android:shape="rectangle">
            <gradient android:startColor="#568bef" android:endColor="#5a92fb" android:angle="90"/>
            <corners android:bottomLeftRadius="3dp" android:bottomRightRadius="3dp" android:topLeftRadius="3dp" android:topRightRadius="3dp" />
		</shape>
    </item>
    
        <item android:state_enabled="false">
        <shape android:padding="1dp"
            android:shape="rectangle">
            <gradient android:startColor="#568bef" android:endColor="#5a92fb" android:angle="90"/>
            <stroke android:width="1dp" android:color="#5e75a6" />
            <corners android:bottomLeftRadius="3dp" android:bottomRightRadius="3dp" android:topLeftRadius="3dp" android:topRightRadius="3dp" />
		</shape>
    </item>
    
</selector>