<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/hoahong.facebook.messenger"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="4dp"
    android:paddingTop="4dp" >

    <hoahong.facebook.messenger.ui.MLRoundedImageView
        android:id="@+id/user_avatar_imagev"
        android:layout_width="55dp"
        android:layout_height="55dp"        
        android:src="@drawable/user_avatar_default"
        app:border_color="#FEFEFE"
        app:border_width="0dp"
        app:shadow="true" />

    <View
        android:id="@+id/user_state_indicator"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginRight="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" 
        android:background="@drawable/online_user_indicator" />
    

    <TextView
        android:id="@+id/user_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/user_avatar_imagev"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/friend_name_default"
        android:textSize="16sp" />
    <View android:layout_width="match_parent"
        android:layout_marginLeft="70dp"
        android:layout_height="1dp"
        android:layout_below="@+id/user_avatar_imagev"
        android:layout_marginTop="5dp"
        android:background="@color/holo_gray_light"/>

</RelativeLayout>